@model EquipmentRentalCore.Models.RoomViewModels.ListRoomsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="col-xs-12">
    <h4>Room <strong>@Model.RoomName</strong> details</h4>
    <hr />
    <div class="row">
        <div class="col-xs-6">
            <div class="row">
                <div class="col-xs-4">
                    @Html.DisplayNameFor(model => model.RoomName)
                </div>
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.RoomName)
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    @Html.DisplayNameFor(model => model.EquipmentAttachedList)
                </div>
                <div class="col-xs-8">
                    @if (Model.EquipmentAttachedList.Count > 0)
                    {
                        for (var i = 0; i < Model.EquipmentAttachedList.Count; i++)
                        {
                            <p>@Model.EquipmentAttachedList[i].EquipmentName</p>
                        }
                    }
                    else
                    {
                        <p>No equipment placed inside this room</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <a class="btn btn-sm btn-info" asp-action="Index">Back to list of rooms-</a>
    </div>
    <br />
</div>


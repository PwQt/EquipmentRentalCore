@model List<EquipmentRentalCore.Models.GroupModels.RolesViewModel>
@{
    ViewData["Title"] = "Group list";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var counter = 1;
}

<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-10">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
    <div class="row">
        <table class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th><label>No.</label></th>
                    <th>
                        <label asp-for="FirstOrDefault().RoleName"></label>
                    </th>
                    <th>
                        <label asp-for="FirstOrDefault().UsersList"></label>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @(counter)
                            </td>
                            <td>
                                @Model[i].RoleName
                            </td>
                            <td>
                                @for (var j = 0; j < Model[i].UsersList.Count; j++)
                                {
                                    <p>@Model[i].UsersList[j].Username <a class="glyphicon glyphicon-remove" asp-controller="Group" asp-action="RemoveUserFromGroup" asp-route-id="@Model[i].UsersList[j].UserID"></a></p>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-success" asp-controller="Group" asp-action="AddUserToGroup" asp-route-id="@Model[i].RoleID"><span class="glyphicon glyphicon-plus"></span> Add user to group</a>
                            </td>
                        </tr>
                        counter += 1;
                    }
                }
            </tbody>
        </table>
    </div>
</div>


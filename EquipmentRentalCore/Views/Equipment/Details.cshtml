@model EquipmentRentalCore.Models.EquipmentViewModels.EquipmentListModel

@{
    ViewData["Title"] = "Equipment "+ @Model.EquipmentName + " details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <h3>Equipment <strong>@Model.EquipmentName</strong> details</h3>
    </div>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col-xs-4">
                <label asp-for="EquipmentName" class="control-label"></label>
            </div>
            <div class="col-xs-8">
                @Model.EquipmentName
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label asp-for="EquipmentTypeText" class="control-label"></label>
            </div>
            <div class="col-xs-8">
                <a asp-action="Details" asp-controller="EquipmentType" asp-route-id="@Model.EquipmentTypeID">@Model.EquipmentTypeText</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label asp-for="RoomName" class="control-label"></label>
            </div>
            <div class="col-xs-8">
                <a asp-action="Details" asp-controller="Room" asp-route-id="@Model.RoomID">@Model.RoomName</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label asp-for="IsRented" class="control-label"></label>
            </div>
            @if (Model.IsRented)
            {
                <div class="col-xs-8">
                    <a asp-action="Details" asp-controller="Rental" asp-route-id="@Model.RentID">Yes</a>
                </div>
            }
            else
            {
                <div class="col-xs-8">
                    No <a asp-action="Rent" asp-controller="Rental" asp-route-id="@Model.Id" class="btn btn-xs btn-success"><span class="glyphicon glyphicon-calendar"></span>&nbsp;Rent</a>
                </div>
            }
        </div>
    </div>
    <br />
    <div class="row">
        <a class="btn btn-sm btn-info" asp-action="Index">Back to list of equipments</a>
    </div>
    <br />
</div>

